<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>org.example.servlets.Servlets</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PatientAddGetAll</servlet-name>
        <servlet-class>org.example.servlets.PatientServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DepartmentAddGetAll</servlet-name>
        <servlet-class>org.example.servlets.DepartmentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DepartmentDeleteAll</servlet-name>
        <servlet-class>org.example.servlets.DeleteAllDepartmentServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PatientAddGetAll</servlet-name>
        <url-pattern>/patient</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DepartmentAddGetAll</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DepartmentDeleteAll</servlet-name>
        <url-pattern>/department/deleteAll</url-pattern>
    </servlet-mapping>

</web-app>
